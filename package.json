{
  "name": "vscode-deprecated",
  "displayName": "VS Code JSDocs Deprecated",
  "license": "MIT",
  "icon": "images/icon.png",
  "version": "0.5.0",
  "description": "VSCode extension that checks for deprecated imports",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-deprecated.showDeprecated",
        "title": "标识不赞成使用的属性或方法"
      }
    ],
    "configuration":{
      "title": "Deprecated",
      "properties": {
        "textDecoration": {
          "type": "string",
          "default": "line-through",
          "enum": ["line-through", "underline", "overline", "none"],
          "title": "textDecoration of Deprecated Identifies"
        },
        "fontStyle": {
          "type": "string",
          "enum": ["inherit", "normal", "italic", "oblique"],
          "title": "fontStyle for Deprecated Identifies"
        },
        "fontWeight": {
          "type": ["string", "number"],
          "enum": ["inherit", "normal", "bold", "bolder", 100, 200, 300, 400, 500, 600, 700, 800, 900],
          "title": "fontWeight for Deprecated Identifies"
        },
        "color": {
          "type": "string",
          "title": "Color for Deprecated Identifies"
        },
        "backgroundColor": {
          "type": "string",
          "default": "blue",
          "title": "backgroundColor for Deprecated Identifies"
        },
        "after": {
          "type": "object",
          "title": "是否在后面插入提示"
        }
      }
    }
  },
  "engines": {
    "vscode": "^1.45.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "types": "tsc src/*.ts",
    "lint": "eslint ./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moesuiga/vscode-jsdocs-deprecated.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "deprecated"
  ],
  "author": "moesuiga",
  "publisher": "double",
  "contributors": [
    "Marius Balaj",
    "Ioana Verebi"
  ],
  "bugs": {
    "url": "https://github.com/moesuiga/vscode-jsdocs-deprecated/issues"
  },
  "homepage": "https://github.com/moesuiga/vscode-jsdocs-deprecated#readme",
  "dependencies": {
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0"
  }
}
